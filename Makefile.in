
MMC = mmc

MFLAGS_COMMON = \
--make \
--output-compile-error-lines 500 \
--max-error-line-width 120

PREFIX = @prefix@

JAVAC = javac

JAR = jar

JAVA_MAIN_CLASSES = \
./ui/swing/AbstractSelectOneOfPanel.java								\
./ui/swing/AnyTypeFieldListEditor.java \
./ui/swing/DynamicDataPanel.java	\
./ui/swing/FieldListCellRendererEditorPanel.java \
./ui/swing/InlinePanelField.java \
./ui/swing/SelectOneOfPanel.java				\
./ui/swing/UIFrame.java \
./ui/swing/UIPanel.java

################################################################################
# STANDARD GNU RULES

.PHONY: all
all: build

.PHONY: build
build:
	$(MAKE) build-console
ifeq (@use_swing@, yes)
	$(MAKE) build-swing
endif

.PHONY: install
install:
	$(MAKE) install-console
ifeq (@use_swing@, yes)
	$(MAKE) install-swing
endif

install-html:
install-dvi:
install-pdf:
install-ps:

uninstall:


install-strip:

# clean rules

.PHONY: clean
clean:
	cd mercury ; rm -f *.err *~ ; rm -fr Mercury
	cd java ; rm -f *~
	rm -fr build
	rm -f manifest.mf

distclean: clean

mostlyclean: clean

maintainer-clean:
	@echo 'This command is intended for maintainers to use; it'
	@echo 'deletes files that may need special tools to rebuild.'
	$(MAKE) clean

TAGS:

# documentation rules

info:

dvi:
html:
pdf:
ps:

dist:

check:

################################################################################
# SPECIFIC RULES

# rules for the console version

build-console:
	cd ./mercury/ ; $(MMC) $(MFLAGS_COMMON) libui_console

install-console:
	cd ./mercury/ ; $(MMC) $(MFLAGS_COMMON) --install-prefix $(PREFIX) libui_console.install

# rules for the swing version

build-swing:
	mkdir --parents build ;
	cd ./mercury/ ; $(MMC) $(MFLAGS_COMMON) --java-classpath ../build/ --grade java --no-libgrade --libgrade java libui_swing
	cd ./java/ ; $(JAVAC) -classpath @mercury_java@:.:../mercury/Mercury/classs -d ../build $(JAVA_MAIN_CLASSES)

install-swing: manifest.mf
	cd ./mercury/ ; $(MMC) $(MFLAGS_COMMON) --install-prefix $(PREFIX) --java-classpath ../build/ --grade java --no-libgrade --libgrade java libui_swing.install
	cd ./build/ ; $(JAR) umf ../manifest.mf $(PREFIX)/lib/mercury/lib/java/ui_swing.jar $$(find . -name '*.class')

manifest.mf:
	@echo "Extension-Name: mc4ap"                        > manifest.mf
	@echo "Implementation-Title: @PACKAGE_NAME@"        >> manifest.mf
	@echo "Implementation-Version: @PACKAGE_VERSION@"   >> manifest.mf
	@echo "Implementation-Vendor: Pedro Mariano"        >> manifest.mf
	@echo "Implementation-URL: @PACKAGE_URL@"           >> manifest.mf
